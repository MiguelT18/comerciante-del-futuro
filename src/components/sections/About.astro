<section class="container mx-auto p-4">
  <h1 class="font-bebas-neue text-secondary text-center text-xl mb-4">
    Â¿QuiÃ©nes somos?
  </h1>

  <ul class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      INSTRUCTORS.map((instructor, index) => {
        const storyId = `story-${index}`;
        const buttonId = `button-${index}`;
        const maxLength = 100;
        const isLongStory = instructor.story.length > maxLength;
        const truncatedStory = isLongStory
          ? instructor.story.slice(0, maxLength) + "..."
          : instructor.story;

        return (
          <li class="card card-shadow relative rounded-xl border-2 border-primary/70">
            <Image
              src={instructor.image}
              alt={`FotografÃ­a de ${instructor.name}`}
              width={500}
              height={500}
              class="rounded-[inherit]"
            />

            <div
              id={`overlay-${index}`}
              class="absolute inset-0 rounded-[inherit]"
              style="background: linear-gradient(to bottom, transparent 0%, transparent 50%, #000 100%);"
            />

            <div class="absolute bottom-0 p-4">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-bold">{instructor.name}</h3>
                <span class="text-sm rounded-full bg-primary/30 border-2 border-primary px-4 py-2">
                  {instructor.age} aÃ±os
                </span>
              </div>
              <p
                class="text-sm text-text"
                id={storyId}
                data-full-text={instructor.story}
              >
                {isLongStory ? truncatedStory : instructor.story}
              </p>
              {isLongStory && (
                <button
                  type="button"
                  class="text-sm underline mx-auto w-full mt-2"
                  id={buttonId}
                  data-expanded="false"
                >
                  Ver mÃ¡s
                </button>
              )}
            </div>
          </li>
        );
      })
    }
  </ul>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll('[id^="button-"]');

    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        const buttonId = button.id;
        const index = buttonId.split("-")[1];
        const storyElement = document.getElementById(`story-${index}`);
        const overlayElement = document.getElementById(`overlay-${index}`);
        const isExpanded = button.getAttribute("data-expanded") === "true";

        if (storyElement) {
          const fullText = storyElement.getAttribute("data-full-text") || "";
          const truncatedText =
            fullText.length > 100 ? fullText.slice(0, 100) + "..." : fullText;

          if (isExpanded) {
            storyElement.textContent = truncatedText;
            button.textContent = "Ver mÃ¡s";
            button.setAttribute("data-expanded", "false");
            // Restaurar gradiente original
            if (overlayElement) {
              overlayElement.style.background =
                "linear-gradient(to bottom, transparent 0%, transparent 50%, #000 100%)";
            }
          } else {
            storyElement.textContent = fullText;
            button.textContent = "Ver menos";
            button.setAttribute("data-expanded", "true");
            // Cambiar a capa completamente negra
            if (overlayElement) {
              overlayElement.style.background =
                "linear-gradient(to bottom, transparent 0%, transparent 0%, #000 60%)";
            }
          }
        }
      });
    });
  });
</script>
